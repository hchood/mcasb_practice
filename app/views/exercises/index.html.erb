<h3>Exercises</h3>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Description</td>
    </tr>
  </thead>
  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= link_to exercise.name, exercise_path(exercise) %></td>
        <td><%= exercise.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @exercises %>
